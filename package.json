{
  "name": "@elrondnetwork/dapp-core-form",
  "version": "0.2.0-alpha.2",
  "description": "A library to hold the main logic for a validating a form for transactions on the Elrond Network",
  "author": "ElrondNetwork",
  "license": "GPL-3.0-or-later",
  "repository": "ElrondNetwork/dapp-core-form",
  "main": "./",
  "module": "./",
  "types": "./dist",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "yarn watch",
    "build:types": "tsc --project tsconfig.json",
    "build": "rimraf dist && node esbuild.js && yarn build:types && cp package.json dist",
    "publish-package": "yarn build && cp package.json dist && cd dist && npm publish",
    "publish-yalc": "yarn build && cd dist && yalc publish",
    "watch": "yarn node esbuild-watch.js && yarn build:types -- --watch",
    "test": "run-s test:unit test:build",
    "test:build": "run-s build",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "7.0.8",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "13.3.0",
    "@tsconfig/create-react-app": "1.0.2",
    "@tsconfig/recommended": "1.0.1",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.22.0",
    "esbuild": "0.14.47",
    "esbuild-node-externals": "1.4.1",
    "esbuild-plugin-svgr": "1.0.1",
    "esbuild-sass-plugin": "2.2.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react": "1.1.7",
    "eslint-config-standard": "17.0.0",
    "eslint-config-standard-react": "9.2.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "glob": "8.0.3",
    "husky": "8.0.1",
    "jest": "28.1.1",
    "postcss-modules": "4.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.0.0",
    "react-scripts": "5.0.1",
    "size-limit": "7.0.8",
    "ts-jest": "28.0.4",
    "tslib": "2.4.0",
    "typescript": "4.7.3"
  },
  "size-limit": [
    {
      "path": "dist/dapp-core-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/dapp-core-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "files": [
    "*.js",
    "**/*.js",
    "*.d.ts",
    "**/*.d.ts"
  ],
  "keywords": [
    "elrond",
    "blockchain",
    "dapp",
    "smart-contract",
    "transaction"
  ],
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "resolutions": {
    "@types/react": "18.0.10",
    "@types/react-dom": "18.0.5"
  },
  "optionalDependencies": {
    "@fortawesome/fontawesome-svg-core": "6.1.0",
    "@fortawesome/free-solid-svg-icons": "6.1.0",
    "@fortawesome/react-fontawesome": "0.1.18",
    "bootstrap": "5.1.3",
    "react-bootstrap": "2.4.0",
    "react-bootstrap-typeahead": "6.0.0-rc.2",
    "react-select": "5.3.2"
  },
  "dependencies": {
    "@elrondnetwork/dapp-core": "2.0.0-alpha.14",
    "@elrondnetwork/erdjs": "10.2.5",
    "anchorme": "2.1.2",
    "axios": "0.24.0",
    "bignumber.js": "9.x",
    "formik": "2.2.9",
    "lodash": "4.17.21",
    "yup": "0.32.11"
  }
}
